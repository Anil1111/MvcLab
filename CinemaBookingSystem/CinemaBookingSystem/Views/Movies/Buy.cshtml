@model CinemaBookingSystem.Models.Movie

@{
    ViewData["Title"] = "Buy";
}
<h4>Movie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Buy" method="post">
            <input type="hidden" asp-for="Id" />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.ShowTime)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ShowTime)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Theater)
                </dt>
                <dd>
                    #@Html.DisplayFor(model => model.Theater.Id)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Tickets) Left
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Tickets)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.TicketValidator)

                </dt>
                <dd>
                    <input asp-for="TicketValidator" type="text" />
                    @Html.ValidationSummary("", new { @class = "text-danger" })

                </dd>
            </dl>
            @{
                if (Model.Tickets <= 0 || Model.TicketValidator > Model.Tickets)
                {
                    <div class="form-group">
                        <input type="submit" value="Sold Out" class="btn btn-danger" disabled />
                    </div>
                }
                else
                {
                    <div class="form-group">
                        <input type="submit" value="Buy" class="btn btn-success" />
                    </div>
                }
            }
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary btn-lg">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
